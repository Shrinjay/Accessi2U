{
   "compilerOptions": {
     "baseUrl": "src",
     "outDir": "dist",
     "lib": ["dom", "dom.iterable", "esnext"],
       "allowJs": true,
       "skipLibCheck": true,
       "strict": false,
       "noEmit": true,
       "esModuleInterop": true,
       "module": "esnext",
       "moduleResolution": "bundler",
       "resolveJsonModule": true,
       "isolatedModules": true,
       "jsx": "preserve",
       "incremental": true,
       "plugins": [
         {
           "name": "next"
         }
       ],
       "paths": {
         "@/*": ["./*"]
       }
   },
   "include": ["src", "cypress", "vite.config.ts", "vitest.setup.ts"],
   "references": [
      {
         "path": "../server"
      },
   ]
}
